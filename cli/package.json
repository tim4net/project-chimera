{
  "name": "nuaibria-cli",
  "version": "1.0.0",
  "description": "Terminal UI for Nuaibria - Semi-Idle RPG with AI Dungeon Master",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:headless": "HEADLESS=true npm test"
  },
  "keywords": ["tui", "rpg", "ai", "dungeon-master", "blessed"],
  "author": "Nuaibria",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "axios": "^1.6.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}
